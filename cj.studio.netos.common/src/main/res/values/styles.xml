<resources>

    <!-- 深色下划线 -->
    <style name="DeepUnderLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray_black</item>
    </style>

    <!-- 深色下划线 -->
    <style name="DeepUnderLineDp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grayLine</item>
    </style>

    <style name="bnve">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="bnve_primary_bg" parent="bnve">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="bnve_white_bg" parent="bnve">
        <item name="android:background">@android:color/white</item>
    </style>
</resources>
